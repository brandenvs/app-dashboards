server {
    listen 80;
    server_name br-code.bcodelabs.com www.br-code.bcodelabs.com;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443;
    server_name br-code.bcodelabs.com www.br-code.bcodelabs.com;

    # Serve static files
    location /static/ {
        alias /home/ubuntu/labSite/;
    }

    # Serve media files
    location /labmedia/ {
        alias /var/www/;
    }

    # Proxy requests to Gunicorn
    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }
}
